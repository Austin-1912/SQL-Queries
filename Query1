Total Customers MoM % = 
VAR CurrentMonth = SELECTEDVALUE('LACA_CUSTOMER_SEGMENTATION_FINAL'[REF_DATE].[Month])
VAR PrevMonth =
    EDATE(CurrentMonth, -1)
VAR CurrentValue =
    [Total Customers]
VAR PrevValue =
    CALCULATE(
        [Total Customers],
        FILTER(
            ALL('LACA_CUSTOMER_SEGMENTATION_FINAL'),
            'LACA_CUSTOMER_SEGMENTATION_FINAL'[REF_DATE].[Month] = PrevMonth
                && SELECTEDVALUE('LACA_CUSTOMER_SEGMENTATION_FINAL'[Country_Code])
                    = MAX('LACA_CUSTOMER_SEGMENTATION_FINAL'[Country_Code])
        )
    )
RETURN
IF(
    NOT ISBLANK(PrevValue),
    DIVIDE(CurrentValue - PrevValue, PrevValue),
    BLANK()
)
